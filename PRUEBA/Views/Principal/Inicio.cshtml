@model List<PRUEBA.Models.Inventario>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de Productos</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Registrar","Principal")">Agregar Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo_de_Producto</th>
                                <th>Es_Activo</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(PRUEBA.Models.Inventario item in Model)
                            { 
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Tipo_de_Producto</td>
                                    <td>@item.Es_Activo</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Editar","Principal", new {Clave=item.Clave})">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar","Principal", new {Clave=item.Clave})">Eliminar</a>
                                    </td>
                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

</div>